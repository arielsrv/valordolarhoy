<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <LangVersion>11</LangVersion>
        <AssemblyName>ValorDolarHoy.Core</AssemblyName>
        <RootNamespace>ValorDolarHoy.Core</RootNamespace>
        <Nullable>enable</Nullable>
        <OutputType>Library</OutputType>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <DocumentationFile>bin\Debug\net6.0\ValorDolarHoy.Core.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>bin\Release\net6.0\ValorDolarHoy.Core.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Ardalis.GuardClauses" Version="4.0.1"/>
        <PackageReference Include="AutoMapper" Version="12.0.0"/>
        <PackageReference Include="Microsoft.AspNetCore.SpaServices.Extensions" Version="7.0.0"/>
        <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="7.0.0"/>
        <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="7.0.0"/>
        <PackageReference Include="Microsoft.VisualStudio.Threading" Version="17.4.27"/>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.2"/>
        <PackageReference Include="Polly" Version="7.2.3"/>
        <PackageReference Include="ServiceStack.Redis" Version="6.5.0"/>
        <PackageReference Include="StackExchange.Redis.Extensions.Core" Version="8.0.5"/>
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0"/>
        <PackageReference Include="System.Reactive" Version="5.1.0-preview.207"/>
        <PackageReference Include="System.Reactive.Core" Version="5.1.0-preview.207"/>
        <PackageReference Include="System.Reactive.Interfaces" Version="5.1.0-preview.207"/>
        <PackageReference Include="System.Reactive.Linq" Version="5.1.0-preview.207"/>
        <PackageReference Include="System.Reactive.Observable.Aliases" Version="5.1.0-preview.207"/>
    </ItemGroup>

</Project>
